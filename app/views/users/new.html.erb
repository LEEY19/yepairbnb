<div id="clearance" class="sign-up container">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <br>
    <div class="submit-field">
      <%= form.submit "Sign Up", class: "btn btn-primary" %>
      <%= link_to "/auth/facebook", class: "btn btn-primary btn-facebook-icon btn-facebook" do %>
      <i class="fa fa-facebook" aria-hidden="true"></i> | Sign Up via Facebook
      <% end %>



    </div>


  <% end %>

  
</div>
