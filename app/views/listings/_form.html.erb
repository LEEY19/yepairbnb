<%= simple_form_for @listing do |f| %>
  <%= f.input :title, input_html: { class: 'form-control' } %>
  <%= f.input :description, input_html: { class: 'form_big_input form-control' } %>
  <%= f.input :address, input_html: { class: 'form_big_input form-control' } %>
  <%= f.input :price, input_html: { class: 'form-control' } %>
  <%= f.input :max_guests, input_html: { class: 'form-control' } %>
  <%= f.input :tags, input_html: { class: 'form-control' } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>